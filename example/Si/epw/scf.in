&CONTROL
    calculation   = "scf"  
!    restart_mode  = "from_scratch"
    prefix        = "Si"
    outdir        = "./"
    pseudo_dir    = "./pseudo/"
!    verbosity     = "high"
!    tprnfor       = .true.  
!    tstress       = .true.
    etot_conv_thr =  1.0d-6
    forc_conv_thr =  1.0d-5
/

&SYSTEM
    ibrav       = 2
    a           = 5.428
!    celldm(1)   = 10.25743340
    nat         = 2
    ntyp        = 1
!    nbnd        = 16
!    occupations = 'fixed'
    occupations = "smearing"
    smearing    = "gaussian"    
    degauss     =  1.0d-2
    ecutwfc     =  50
    ecutrho     =  400
/

&ELECTRONS
    conv_thr         =  1.000e-08
    electron_maxstep =  200
    mixing_beta      =  7.00000e-01
    startingpot      = "atomic"
    startingwfc      = "atomic+random"
/

&IONS
    ion_dynamics = "bfgs"
/

&CELL
    cell_dofree    = "ibrav"
    cell_dynamics  = "bfgs"
    press_conv_thr =  0.01
/

K_POINTS {automatic}
 12  12  12  0 0 0

ATOMIC_SPECIES
Si     28.08550   Si.pbe-n-rrkjus_psl.1.0.0.UPF


ATOMIC_POSITIONS (crystal)
Si      0.000000   0.000000   0.000000
Si      0.250000   0.250000   0.250000
