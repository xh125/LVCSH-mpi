    occupations = "smearing"
    smearing    = "mp"    
    degauss     =  1.0d-2
    ecutwfc     =  80
    ecutrho     =  480
/

&ELECTRONS
    conv_thr         =  1.000e-12
    electron_maxstep =  200
    mixing_beta      =  7.00000e-01
    startingpot      = "atomic"
    startingwfc      = "atomic+random"
/

!&IONS
!    ion_dynamics = "bfgs"
!/

!&CELL
!    cell_dofree    = "ibrav+2Dxy"
