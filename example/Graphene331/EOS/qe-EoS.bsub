    prefix        = "graphene"
    outdir        = "./"
    pseudo_dir    = "./pseudo/"
    verbosity     = "high"
    tprnfor       = .true.
    tstress       = .true.
    etot_conv_thr =  1.0d-8
    forc_conv_thr =  1.0d-7
/

&SYSTEM
    ibrav       = 4
    nat         = 18
    ntyp        = 1
    a           = $lattice
    c           = 20
! celldm(1) =      4.66148920
! celldm(3) =      6.08086614
!    nbnd        = 16
