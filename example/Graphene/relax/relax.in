&CONTROL
    calculation   = "relax"  
    restart_mode  = "from_scratch"
    prefix        = "graphene"
    outdir        = "./outdir/"
    pseudo_dir    = "./pseudo/"
    verbosity     = "high"
    tprnfor       = .true.  
    tstress       = .true.
    etot_conv_thr =  1.0d-6
    forc_conv_thr =  1.0d-5
/

&SYSTEM
    ibrav       = 4
    nat         = 2
    ntyp        = 1
    a           = 2.467
    c           = 15.0
!    nbnd        = 16
    occupations = "smearing"
    smearing    = "gaussian"    
    degauss     =  1.0d-2
    ecutwfc     =  45
    ecutrho     =  360
/

&ELECTRONS
    conv_thr         =  1.000e-09
    electron_maxstep =  200
    mixing_beta      =  7.00000e-01
    startingpot      = "atomic"
    startingwfc      = "atomic+random"
/

&IONS
    ion_dynamics = "bfgs"
/

&CELL
    cell_dofree    = "ibrav"
    cell_dynamics  = "bfgs"
    press_conv_thr =  0.01
/

K_POINTS {automatic}
 12  12  1  0 0 0

